<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300"
      stylesheets="@forgot_password.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ForgotPasswordController">

    <Label text="Mot de passe oublié ?" styleClass="title-label"/>

    <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="input-field"/>

    <Button text="Envoyer le lien de réinitialisation" onAction="#handleSendResetLink" styleClass="submit-button"/>

    <Label fx:id="messageLabel" textFill="red" visible="false" styleClass="message-label"/>

</VBox>
