<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_RIGHT" prefHeight="389.0" prefWidth="492.0" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controllers.Modification">
    <TextField fx:id="imageUrlField" promptText="URL de l'image" />
    <TextField fx:id="descriptionField" promptText="Description de la publication" />
    <TextField fx:id="contenuField" promptText="Contenu de la publication" />

    <Button onAction="#handleSave" text="Enregistrer" />
    <Button alignment="CENTER" onAction="#handleCancel" text="Annuler" />
</VBox>
