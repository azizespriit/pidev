   <Label layoutX="73.0" layoutY="20.0" text="Publications" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

   <!-- Liste des publications -->
   <ListView fx:id="All" layoutX="73.0" layoutY="58.0" prefHeight="320" prefWidth="590" stylesheets="@style.css" />

   <!-- Boutons -->
   <Button fx:id="ajouter" layoutX="125.0" layoutY="400.0" onAction="#handleAjouter" prefHeight="26.0" prefWidth="71.0" text="Ajouter" textFill="#df1a1a" />
   <Button fx:id="commentButton" layoutX="248.0" layoutY="400.0" onAction="#handleCommenter" text="Commenter" textFill="#ec1313" />
   <Button fx:id="mod" layoutX="382.0" layoutY="399.0" onAction="#handleModifier" prefHeight="26.0" prefWidth="79.0" text="Modifier" textFill="#e71717" />
   <Button fx:id="supp" layoutX="508.0" layoutY="400.0" onAction="#handleSupprimer" prefHeight="26.0" prefWidth="79.0" text="Supprimer" textFill="#e41a1a" />
